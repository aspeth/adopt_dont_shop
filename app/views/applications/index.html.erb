<h1>Applications</h1>

<% @applications.each do |application| %>
  <p>Name: <%= application.name %></p>
  <p>Address:
    <%= application.street_address %>
    <%= application.city %>
    <%= application.state %>
    <%= application.zipcode %>
  </p>
  <p>Description: <%= application.description %></p>
  <p>Status: <%= application.status %></p><hr>
<% end %>
